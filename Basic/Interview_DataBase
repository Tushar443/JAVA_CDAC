show databases;
use practice;
show tables;

create table sales_people(
	Snum int(4) primary key,
    Sname varchar(10),
    City varchar(10),
    Comm float(3,2)
);

create table customer(
	Cnum int(4) primary key,
    Cname varchar (10),
    City varchar(10),
    Rating int(4),
    Snum int(4),
    foreign key (Snum) references sales_people(Snum)
);

create table orders(
	Onum int(4) primary key,
    Amt float,
    Odate date,
    Cnum int(4),
    Snum int(4),
    foreign key (Snum) references sales_people(Snum)
);
drop table orders;

desc orders;

select * from sales_people;
select * from customer;
select * from orders;
